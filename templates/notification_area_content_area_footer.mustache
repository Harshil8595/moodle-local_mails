{{!
    @template local_mails/notification_area_content_area_footer

    This template will render the footer for the content area in the
    notification area on the notifications page.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * contexturl     The URL for the associated resource
    * contexturlname Human readable name for the URL

    Example context (json):
    {
    }

}}
{{#hasattachments}}
<div class="email-attachment">
    <div class="file-info">
        <div class="file-size">{{#pix}}pin,local_mails{{/pix}} <span>{{#str}}attachmets,local_mails{{/str}}</span></div>
<!--        <button class="btn btn-sm btn-soft-base">View All</button>-->
<!--        <button class="btn btn-sm btn-soft-success">Download All</button>-->
    </div>
    <ul class="attachment-list" data-region="attachment-list">
        {{#attachments}}
        <li class="attachment-list-item">
            {{#url}}
                <a href="{{{.}}}" title="{{{name}}}">
                    {{#icon}}
                        {{#pix}}{{.}}{{/pix}}
                    {{/icon}}
                    {{{name}}}
                </a>
            {{/url}}
        </li>
        {{/attachments}}
    </ul>
</div>
{{/hasattachments}}
